{{#if addNewAnswer}}
<h4>New Answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input class="form-control" value=content id="content"}}
      </div>
      <button class="btn btn-primary" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
